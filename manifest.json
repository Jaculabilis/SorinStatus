{
  "manifest_version": 2,
  
  "name": "Sorin Status",
  "description": "Appends Sorin Markov's current status to every Magic Story article.",
  "version": "1.0.1",
  "author": "Tim Van Baak",
  
  "icons": {
    "48": "icon48.png",
	"128": "icon128.png"
  },
  
  "content_scripts": [
    {
	  "matches": [
		"http://magic.wizards.com/en/articles/archive/magic-story/*",
		"https://magic.wizards.com/en/articles/archive/magic-story/*"
	  ],
	  "js": ["append_sorin.js"]
	}
  ]
}